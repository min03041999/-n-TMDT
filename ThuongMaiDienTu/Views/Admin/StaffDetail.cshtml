@model ThuongMaiDienTu.Models.Admin

@{
    ViewBag.Title = "ADMIN | Chi tiết tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1 class="text-title">Thông tin tài khoản</h1>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <td>Mã</td>
                    <td>@Html.DisplayFor(model => model.AdminID)</td>
                </tr>
                <tr>
                    <td width="20%">Họ và tên</td>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>Quyền</td>
                    <td>@Html.DisplayFor(model => model.Role.RoleName)</td>
                </tr>
                <tr>
                    <td>Mật khẩu</td>
                    <td>@Html.DisplayFor(model => model.Password)</td>
                </tr>               
            </table>
            <div class="text-center">
                <a href="@Url.Action("StaffList", "Admin")" class="btn btn-warning">Trở về</a>
                <a href="@Url.Action("Edit", "Admin", new { id=Model.AdminID})" class="btn btn-primary">Cập nhật</a>

            </div>
        </div>
    </div>
</div>
