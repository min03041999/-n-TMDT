@model ThuongMaiDienTu.Models.Customer

@{
    ViewBag.Title = "ADMIN | Chi tiết tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1 class="text-title">Thông tin tài khoản</h1>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <td>Mã</td>
                    <td>@Html.DisplayFor(model => model.UserID)</td>
                </tr>
                <tr>
                    <td width="20%">Họ và tên</td>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                </tr>
                <tr>
                    <td>Điểm tích lũy</td>
                    <td>@Model.Point.Value.ToString("N0")</td>
                </tr>
                <tr>
                    <td>Hạng</td>
                    <td>@Html.DisplayFor(model => model.UserRank.RankName)</td>
                </tr>
                <tr>
                    <td>Mật khẩu</td>
                    <td>@Html.DisplayFor(model => model.Password)</td>
                </tr>
            </table>
            <div class="text-center">
                @using (Html.BeginForm("DeleteUser", "Admin"))
                {
                    <a href="@Url.Action("UserList", "Admin")" class="btn btn-warning">Trở về</a>

                    <a href="~/Admin/DeleteUser/@Model.UserID" class="btn btn-danger">Xóa tài khoản</a>
                }
            </div>
        </div>
    </div>
</div>
