@model IEnumerable<ThuongMaiDienTu.Models.Order>

@{
    ViewBag.Title = "3RINGS | Danh sách đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<body>
    <div class="container">
        <h1 class="text-title">Danh sách đơn hàng</h1>
        <div class="box">
            <div class="row">
                <div class="col-md-8">
                    <div style="display: inline">
                        <div class="col-md-3">
                            <div class="col-md-6">
                                <img height="50" class="img-rounded" src="~/Content/Image/order-icon-sm.png" />
                            </div>
                            <div class="col-md-6">
                                <p style="font-size: 25px; font-weight: bold; padding: 0; margin: 0">@Html.Action("AllOrder", "Order")</p> đơn
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="col-md-6">
                                <img height="50" class="img-rounded" src="~/Content/Image/order-success-sm.png" />
                            </div>
                            <div class="col-md-6">
                                <p style="font-size: 25px; font-weight: bold; padding: 0; margin: 0">@Html.Action("SoDonDaGiaoHang", "Order")</p> đơn
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="col-md-6">
                                <img height="50" class="img-rounded" src="~/Content/Image/order-cancel-sm.png" />
                            </div>
                            <div class="col-md-6">
                                <p style="font-size: 25px; font-weight: bold; padding: 0; margin: 0">@Html.Action("SoDonDaHuy", "Order")</p> đơn
                            </div>

                        </div>

                    </div>

                </div>
                <div class="col-md-4">
                    <form class="navbar-form navbar-right">
                        @using (Html.BeginForm("SearchOrder", "Order"))
                        {
                            <div class="form-group">

                                @Html.TextBox("search", "", new { placeholder = "Nhập từ khóa tìn kiếm...", @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                            <a class="btn btn-default" href="/Order/Index"><span class="glyphicon glyphicon-refresh"></span></a>
                        }
                    </form>
                </div>
            </div>

        </div>
        <div class="box" style="overflow-x: auto">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th class="text-center">
                            Mã đơn hàng
                        </th>
                        <th class="text-center">
                            Khách hàng
                        </th>
                        <th class="text-center">
                            Ngày mua
                        </th>
                        <th class="text-center">
                            Ngày nhận
                        </th>
                        <th>
                            Địa chỉ giao hàng
                        </th>
                        <th class="text-center">
                            Trạng thái
                        </th>
                        <th class="text-center">
                            Chức năng
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @item.OrderID
                            </td>
                            <td class="text-center">
                                @item.FullName
                            </td>
                            <td class="text-center">
                                @item.OrderDate
                            </td>
                            <td class="text-center">
                                @item.RecieveDate
                            </td>
                            <td>
                                @item.ShippingAddress
                            </td>
                            <td class="text-center">
                                @item.OrderStatu.StatusName
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Chi tiết", "OrderDetail", "Order", new { id = item.OrderID }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="7">
                                <p class="text-result">Không tìm thấy kết quả phù hợp.</p>
                            </td>
                        </tr>
                    }
                </tfoot>
            </table>

        </div>
    </div>
</body>


