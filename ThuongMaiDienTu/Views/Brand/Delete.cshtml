@model ThuongMaiDienTu.Models.Brand

@{
    ViewBag.Title = "3rings | Xóa thương hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <div class="container">
        <h1 class="text-title">Xóa thương hiệu này?</h1>
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                <div class="box">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.BrandID)
                        <form>
                            <div class="form-group text-center">
                                <label>@Html.DisplayFor(m => m.BrandName)</label>
                                <img src="@Url.Content(Model.Image)" class="img-rounded" style="height: 200px; width: auto; margin-top: 10px; margin-bottom: 10px; display: block; margin: auto" id="previewImage" />
                            </div>
                            <hr />
                            <div class="form-group text-center">
                                <a href="/Brand/Index" class="btn btn-warning">Trở về</a>
                                <button type="submit" class="btn btn-primary">Xác nhận xóa</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</body>