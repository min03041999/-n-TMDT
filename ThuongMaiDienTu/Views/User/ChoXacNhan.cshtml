@model IEnumerable<ThuongMaiDienTu.Models.Order>
<table class="table table-hover table-striped'">
    <thead>
        <tr class="bg-primary">
            <th class="text-center">
                Mã đơn hàng
            </th>
            <th class="text-center">
                Ngày mua
            </th>
            <th>
                Địa chỉ giao hàng
            </th>
            <th class="text-center">
                Trạng thái
            </th>
            <th class="text-center">
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @item.OrderID
                </td>
                <td class="text-center">
                    @item.OrderDate
                </td>
                <td>
                    @item.ShippingAddress
                </td>
                <td class="text-center">
                    @item.OrderStatu.StatusName
                </td>
                <td class="text-center">
                    @Html.ActionLink("Chi tiết", "chi-tiet-don-hang", "User", new { id = item.OrderID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Hủy", "huy-don-hang", "User", new { id = item.OrderID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
